@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Home Page";
    
} 



<div class="card-deck">
    @foreach (var item in Model)
    {
        var photopath = "~/Images/" + (item.PhotoPat ?? "man2.jpg");
        <div  class="card m-3" style="min-width:18rem; max-width:30.5%;">

            <img class="card-img-top imageThumbnail" src="@photopath"  alt="Card image cap"
                 asp-append-version="true">
            <div class="card-body">
                <h5 class="card-title"> Name  : @item.Name</h5>
                <p class="card-text">Email : @item.Email</p>
                <small class="text-muted"> Department : @item.Department</small>
            </div>
            <div class="card-footer text-center">

                <a asp-controller="home" asp-action="details" asp-route-id="@item.Id" class="btn btn-primary">View</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                <a asp-controller="home" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>


            </div>
        </div>
    }
</div>